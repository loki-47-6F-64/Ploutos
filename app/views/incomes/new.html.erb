<% if @income.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@income.errors.count, "error") %> prohibited
      this post from being saved:</h2>
    <ul>
    <% @income.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @income, url: incomes_path do |f| %>
  <p>
    <%= f.label :start %>
    <%= f.date_select(:start, use_two_digit_numbers: true) %>
  </p>
  <p>
    <%= f.label :end %>
    <%= f.date_select(:end, use_two_digit_numbers: true) %>
  </p>
  <p>
    <%= f.label "Cost per month." %>
    <%= f.text_field :amountRound %>,
      <%= f.text_field :amountDecimal %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
