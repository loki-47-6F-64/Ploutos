<%= form_for @fixed_cost, url: fixed_cost_path(@fixed_cost) do |f| %> 
  <p>
    <%= f.label :type_id %>
    <%= f.select :type_id, @types.map { |type| [type.name,type.id] }, {}, :onchange => 'set_link()' %>
    <%= link_to 'Add type', new_type_path %>
    <%= link_to 'Edit type', edit_type_path(@types[0]), :id => 'edit_type' %>
    <%= link_to 'Destroy', type_path(@types[0]), method: :delete, :id => 'destroy_type' %>
  </p>
  <p>
    <%= f.label :first_payment %>
    <%= f.date_select :first_payment, { :discard_day => true } %>
  </p>
  <p>
    <%= f.label :amount %>
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :frequency %>
    <%= f.text_field :frequency %>
  </p>
  <p>
    <%= f.label :priority %>
    <%= f.text_field :priority %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
