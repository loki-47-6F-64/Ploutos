<%= form_for @current_user, url: edit_password_path do |f| %>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :old_password %>
    <%= f.password_field :old_password %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
